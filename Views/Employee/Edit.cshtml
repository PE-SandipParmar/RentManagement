@model Employee
@{
    ViewData["Title"] = "Edit Employee";
}
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<style>
    .select2-container--default .select2-selection--single {
        height: 42px;
        border: 1px solid #d1d5db;
        border-radius: 0.375rem;
        padding: 6px 12px;
    }

        .select2-container--default .select2-selection--single .select2-selection__rendered {
            color: #374151;
            line-height: 28px;
        }

        .select2-container--default .select2-selection--single .select2-selection__arrow {
            height: 40px;
        }
</style>
<div class="max-w-4xl mx-auto">
    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
            <h1 class="text-2xl font-bold text-gray-900">Edit Employee</h1>
        </div>

        <form asp-action="Edit" method="post" class="px-6 py-4 space-y-6">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-red-600"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="Code" class="block text-sm font-medium text-gray-700 mb-1">Code</label>
                    <input asp-for="Code" class="w-full px-3 py-2 border border-gray-300 rounded-md" />
                    <span asp-validation-for="Code" class="text-red-600 text-sm"></span>
                </div>
                <div>
                    <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                    <input asp-for="Name" class="w-full px-3 py-2 border border-gray-300 rounded-md" />
                    <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="DateOfBirth" class="block text-sm font-medium text-gray-700 mb-1">Date of Birth</label>
                    <input asp-for="DateOfBirth" type="date" class="w-full px-3 py-2 border border-gray-300 rounded-md" />
                    <span asp-validation-for="DateOfBirth" class="text-red-600 text-sm"></span>

                </div>
                <div>
                    <label asp-for="Gender" class="block text-sm font-medium text-gray-700 mb-1">Gender</label>
                    <select asp-for="Gender" class="searchable-dropdown w-full px-3 py-2 border border-gray-300 rounded-md">
                        <option value="">Select Gender</option>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-red-600 text-sm"></span>

                </div>
            </div>

            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input asp-for="Email" type="email" class="w-full px-3 py-2 border border-gray-300 rounded-md" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>

            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="Aadhar" class="block text-sm font-medium text-gray-700 mb-1">Aadhar</label>
                    <input asp-for="Aadhar" class="w-full px-3 py-2 border border-gray-300 rounded-md" />
                    <span asp-validation-for="Aadhar" class="text-red-600 text-sm"></span>

                </div>
                <div>
                    <label asp-for="Pan" class="block text-sm font-medium text-gray-700 mb-1">PAN</label>
                    <input asp-for="Pan" class="w-full px-3 py-2 border border-gray-300 rounded-md" />
                    <span asp-validation-for="Pan" class="text-red-600 text-sm"></span>

                </div>
            </div>
            <h2 class="text-lg font-semibold text-gray-800 mt-6">Job Details</h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="DepartmentId" class="block text-sm font-medium text-gray-700 mb-1">Department</label>
                    <select asp-for="DepartmentId" class=" searchable-dropdown w-full px-3 py-2 border border-gray-300 rounded-md"
                            asp-items="@(new SelectList(ViewBag.Departments, "Id", "Name"))">
                        <option value="">-- Select Department --</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-red-600 text-sm"></span>

                </div>
                <div>
                    <label asp-for="DesignationId" class="block text-sm font-medium text-gray-700 mb-1">Designation</label>
                    <select asp-for="DesignationId" class="searchable-dropdown w-full px-3 py-2 border border-gray-300 rounded-md"
                            asp-items="@(new SelectList(ViewBag.Designations, "Id", "Name"))">
                        <option value="">-- Select Designation --</option>
                    </select>
                    <span asp-validation-for="DesignationId" class="text-red-600 text-sm"></span>

                </div>
            </div>

            <div>
                <label asp-for="DateOfJoining" class="block text-sm font-medium text-gray-700 mb-1">Date of Joining</label>
                <input asp-for="DateOfJoining" type="date" class="w-full px-3 py-2 border border-gray-300 rounded-md" />
                <span asp-validation-for="DateOfJoining" class="text-red-600 text-sm"></span>

            </div>

            <div>
                <label class="inline-flex items-center">
                    <input asp-for="EligibleForLease" type="checkbox" class="form-checkbox h-5 w-5 text-blue-600" />
                    <span class="ml-2 text-sm text-gray-700">Eligible for Lease</span>
                </label>

            </div>

            <h2 class="text-lg font-semibold text-gray-800 mt-6">Salary Details</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="TotalSalary" class="block text-sm font-medium text-gray-700 mb-1">Total Salary</label>
                    <input asp-for="TotalSalary" type="number" step="0.01" class="w-full px-3 py-2 border border-gray-300 rounded-md" />
                    <span asp-validation-for="TotalSalary" class="text-red-600 text-sm"></span>

                </div>
                <div>
                    <label asp-for="HouseRentAllowance" class="block text-sm font-medium text-gray-700 mb-1">House Rent Allowance</label>
                    <input asp-for="HouseRentAllowance" type="number" step="0.01" class="w-full px-3 py-2 border border-gray-300 rounded-md" />
                    <span asp-validation-for="HouseRentAllowance" class="text-red-600 text-sm"></span>

                </div>
                <div>
                    <label asp-for="TravelAllowance" class="block text-sm font-medium text-gray-700 mb-1">Travel Allowance</label>
                    <input asp-for="TravelAllowance" type="number" step="0.01" class="w-full px-3 py-2 border border-gray-300 rounded-md" />
                    <span asp-validation-for="TravelAllowance" class="text-red-600 text-sm"></span>

                </div>
                <div>
                    <label asp-for="MedicalAllowance" class="block text-sm font-medium text-gray-700 mb-1">Medical Allowance</label>
                    <input asp-for="MedicalAllowance" type="number" step="0.01" class="w-full px-3 py-2 border border-gray-300 rounded-md" />
                    <span asp-validation-for="MedicalAllowance" class="text-red-600 text-sm"></span>

                </div>
                <div>
                    <label asp-for="OtherAllowance" class="block text-sm font-medium text-gray-700 mb-1">Other Allowance</label>
                    <input asp-for="OtherAllowance" type="number" step="0.01" class="w-full px-3 py-2 border border-gray-300 rounded-md" />
                    <span asp-validation-for="OtherAllowance" class="text-red-600 text-sm"></span>

                </div>
                <div>
                    <label asp-for="GrossSalaryAfterDeductions" class="block text-sm font-medium text-gray-700 mb-1">Gross Salary After Deductions</label>
                    <input asp-for="GrossSalaryAfterDeductions" type="number" step="0.01" class="w-full px-3 py-2 border border-gray-300 rounded-md" readonly/>
                    <span asp-validation-for="GrossSalaryAfterDeductions" class="text-red-600 text-sm"></span>

                </div>
            </div>

         @*    <div>
                <label class="inline-flex items-center">
                    <input asp-for="IsActive" type="checkbox" class="form-checkbox h-5 w-5 text-blue-600" />
                    <span class="ml-2 text-sm text-gray-700">Active</span>
                </label>
            </div> *@

            <div class="flex justify-end space-x-3">
                <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700">
                    Update 
                    </button>
                <a href="@Url.Action("Index")" class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-200 rounded-md hover:bg-gray-300">
                    Cancel
                </a>
             
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
    $(document).ready(function () {
        $('.searchable-dropdown').select2({
            placeholder: "Select an option",
            allowClear: true,
            width: '100%'
        });
    });
</script>
<script>
    function calculateGrossSalary() {
        const totalSalary = parseFloat(document.getElementById('TotalSalary').value) || 0;
        const hra = parseFloat(document.getElementById('HouseRentAllowance').value) || 0;
        const travel = parseFloat(document.getElementById('TravelAllowance').value) || 0;
        const medical = parseFloat(document.getElementById('MedicalAllowance').value) || 0;
        const other = parseFloat(document.getElementById('OtherAllowance').value) || 0;

        const gross = totalSalary - (hra + travel + medical + other);
        document.getElementById('GrossSalaryAfterDeductions').value = gross.toFixed(2);
    }

    // Attach event listeners
    document.getElementById('TotalSalary').addEventListener('input', calculateGrossSalary);
    document.getElementById('HouseRentAllowance').addEventListener('input', calculateGrossSalary);
    document.getElementById('TravelAllowance').addEventListener('input', calculateGrossSalary);
    document.getElementById('MedicalAllowance').addEventListener('input', calculateGrossSalary);
    document.getElementById('OtherAllowance').addEventListener('input', calculateGrossSalary);
</script>