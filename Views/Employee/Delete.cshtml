@model RentManagement.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="max-w-4xl mx-auto">
    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h1 class="text-2xl font-bold text-red-600">Delete Employee</h1>
        </div>

        <div class="p-6">
            <div class="mb-6 bg-red-50 border-l-4 border-red-500 text-red-700 p-4 rounded">
                <p class="font-semibold"></p>
                <p>Are you sure you want to permanently delete this employee? This action cannot be undone.</p>
            </div>

            <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-4">
             @*    <div>
                    <dt class="font-medium text-gray-700">ID</dt>
                    <dd class="text-gray-900">@Model.Id</dd>
                </div> *@

                <div>
                    <dt class="font-medium text-gray-700">Code</dt>
                    <dd class="text-gray-900">@Model.Code</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">Name</dt>
                    <dd class="text-gray-900">@Model.Name</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">Date of Birth</dt>
                    <dd class="text-gray-900">@Model.DateOfBirth?.ToString("dd-MMM-yyyy")</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">Gender</dt>
                    <dd class="text-gray-900">@Model.Gender</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">Email</dt>
                    <dd class="text-gray-900">@Model.Email</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">Aadhar</dt>
                    <dd class="text-gray-900">@Model.Aadhar</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">PAN</dt>
                    <dd class="text-gray-900">@Model.Pan</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">Department</dt>
                    <dd class="text-gray-900">@Model.DepartmentName</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">Designation</dt>
                    <dd class="text-gray-900">@Model.DesignationName</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">Date of Joining</dt>
                    <dd class="text-gray-900">@Model.DateOfJoining?.ToString("dd-MMM-yyyy")</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">Eligible For Lease</dt>
                    <dd class="text-gray-900"> @(@Model.EligibleForLease ? "Yes" : "No")</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">Total Salary</dt>
                    <dd class="text-gray-900">@Model.TotalSalary</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">House Rent Allowance</dt>
                    <dd class="text-gray-900">@Model.HouseRentAllowance</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">Travel Allowance</dt>
                    <dd class="text-gray-900">@Model.TravelAllowance</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">Medical Allowance</dt>
                    <dd class="text-gray-900">@Model.MedicalAllowance</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">Other Allowance</dt>
                    <dd class="text-gray-900">@Model.OtherAllowance</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">Gross Salary After Deductions</dt>
                    <dd class="text-gray-900">@Model.GrossSalaryAfterDeductions</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">Is Active</dt>
                    <dd class="text-gray-900"> @(Model.IsActive ? "Yes" : "No")</dd>
                </div>
            </dl>

            <form asp-action="DeleteConfirmed" method="post" class="mt-6 flex items-center">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-lg shadow">
                    Yes, Delete
                </button>
                <a asp-action="Index" class="ml-4 bg-gray-300 hover:bg-gray-400 text-gray-800 px-6 py-2 rounded-lg shadow">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>
