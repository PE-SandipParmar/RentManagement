@model Employee

@{
    ViewData["Title"] = "Employee Details";
}

<div class="max-w-5xl mx-auto bg-white shadow-xl rounded-xl overflow-hidden border border-gray-200">
    <div class="bg-gradient-to-r from-indigo-600 to-blue-500 px-6 py-5">
        <h1 class="text-3xl font-bold text-white">Employee Details</h1>
        <p class="text-indigo-100 text-sm">Complete information about this Employee</p>
    </div>

    <div class="px-8 py-8 text-gray-700">
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-10 gap-y-6">
          
            <div>
                <dt class="text-sm font-semibold text-gray-500">Code</dt>
                <dd class="mt-1 p-2 bg-gray-50 rounded-lg border border-gray-200">@Model.Code</dd>
            </div>

            <div>
                <dt class="text-sm font-semibold text-gray-500">Name</dt>
                <dd class="mt-1 p-2 bg-gray-50 rounded-lg border border-gray-200">@Model.Name</dd>
            </div>
            <div>
                <dt class="text-sm font-semibold text-gray-500">Date of Birth</dt>
                <dd class="mt-1 p-2 bg-gray-50 rounded-lg border border-gray-200">@Model.DateOfBirth?.ToString("dd-MM-yyyy")</dd>
            </div>

            <div>
                <dt class="text-sm font-semibold text-gray-500">Gender</dt>
                <dd class="mt-1 p-2 bg-gray-50 rounded-lg border border-gray-200">@Model.Gender</dd>
            </div>
            <div>
                <dt class="text-sm font-semibold text-gray-500">Email</dt>
                <dd class="mt-1 p-2 bg-gray-50 rounded-lg border border-gray-200">@Model.Email</dd>
            </div>

            <div>
                <dt class="text-sm font-semibold text-gray-500">Aadhar</dt>
                <dd class="mt-1 p-2 bg-gray-50 rounded-lg border border-gray-200">@Model.Aadhar</dd>
            </div>
            <div>
                <dt class="text-sm font-semibold text-gray-500">PAN</dt>
                <dd class="mt-1 p-2 bg-gray-50 rounded-lg border border-gray-200">@Model.Pan</dd>
            </div>

            <div>
                <dt class="text-sm font-semibold text-gray-500">Department</dt>
                <dd class="mt-1 p-2 bg-gray-50 rounded-lg border border-gray-200">@Model.DepartmentName</dd>
            </div>
            <div>
                <dt class="text-sm font-semibold text-gray-500">Designation</dt>
                <dd class="mt-1 p-2 bg-gray-50 rounded-lg border border-gray-200">@Model.DesignationName</dd>
            </div>

            <div>
                <dt class="text-sm font-semibold text-gray-500">Date of Joining</dt>
                <dd class="mt-1 p-2 bg-gray-50 rounded-lg border border-gray-200">@Model.DateOfJoining?.ToString("dd-MM-yyyy")</dd>
            </div>
            <div>
                <dt class="text-sm font-semibold text-gray-500">Eligible for Lease</dt>
                <dd class="mt-1 p-2 bg-gray-50 rounded-lg border border-gray-200">@(Model.EligibleForLease ? "Yes" : "No")</dd>
            </div>

            <div>
                <dt class="text-sm font-semibold text-gray-500">Total Salary</dt>
                <dd class="mt-1 p-2 bg-gray-50 rounded-lg border border-gray-200">@(Model.TotalSalary?.ToString("C") ?? "-")</dd>
            </div>
            <div>
                <dt class="text-sm font-semibold text-gray-500">House Rent Allowance (HRA)</dt>
                <dd class="mt-1 p-2 bg-gray-50 rounded-lg border border-gray-200">@(Model.HouseRentAllowance?.ToString("C") ?? "-")</dd>
            </div>

            <div>
                <dt class="text-sm font-semibold text-gray-500">Travel Allowance (TA)</dt>
                <dd class="mt-1 p-2 bg-gray-50 rounded-lg border border-gray-200">@(Model.TravelAllowance?.ToString("C") ?? "-")</dd>
            </div>
            <div>
                <dt class="text-sm font-semibold text-gray-500">Medical Allowance</dt>
                <dd class="mt-1 p-2 bg-gray-50 rounded-lg border border-gray-200">@(Model.MedicalAllowance?.ToString("C") ?? "-")</dd>
            </div>

            <div>
                <dt class="text-sm font-semibold text-gray-500">Other Allowance</dt>
                <dd class="mt-1 p-2 bg-gray-50 rounded-lg border border-gray-200">@(Model.OtherAllowance?.ToString("C") ?? "-")</dd>
            </div>
            <div>
                <dt class="text-sm font-semibold text-gray-500">Gross Salary After Deductions</dt>
                <dd class="mt-1 p-2 bg-gray-50 rounded-lg border border-gray-200">@(Model.GrossSalaryAfterDeductions?.ToString("C") ?? "-")</dd>
            </div>

         @*    <div class="md:col-span-2">
                <dt class="text-sm font-semibold text-gray-500">Created At</dt>
                <dd class="mt-1 p-2 bg-gray-50 rounded-lg border border-gray-200">@Model.CreatedAt.ToString("dd-MM-yyyy HH:mm")</dd>
            </div> *@
        </dl>

        <!-- Footer Actions -->
        <div class="flex justify-end space-x-3 mt-8 border-t pt-4">
            <a href="@Url.Action("Index")"
               class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-200 rounded-md hover:bg-gray-300">
                Back to List
            </a>
        </div>
    </div>
</div>
