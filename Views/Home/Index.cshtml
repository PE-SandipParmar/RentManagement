@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Rent Management System</h1>
    <p>Manage your rental properties efficiently and securely.</p>

    @if (!User.Identity.IsAuthenticated)
    {
        <div class="mt-4">
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg me-3">
                <i class="fas fa-sign-in-alt"></i> Login
            </a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-user-plus"></i> Register
            </a>
        </div>
    }
    else
    {
        <div class="mt-4">
            <a asp-controller="Account" asp-action="Dashboard" class="btn btn-success btn-lg">
                <i class="fas fa-tachometer-alt"></i> Go to Dashboard
            </a>
        </div>
    }
</div>