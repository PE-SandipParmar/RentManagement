<!-- Views/Admin/EditUser.cshtml -->
@model RentManagement.ViewModels.EditUserViewModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="max-w-4xl mx-auto">
    <!-- Page Header -->
    <div class="mb-8">
        <div class="flex items-center space-x-4 mb-4">
            <a asp-action="UserManagement" class="text-gray-600 hover:text-gray-900">
                <i class="ri-arrow-left-line text-xl"></i>
            </a>
            <div>
                <h1 class="text-2xl font-bold text-gray-900">Edit User</h1>
                <p class="text-sm text-gray-600">Update user account information</p>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 bg-blue-50">
            <h2 class="text-lg font-medium text-gray-900 flex items-center">
                <i class="ri-user-settings-line mr-2 text-blue-600"></i>
                User Information
            </h2>
        </div>

        <div class="p-6">
            <form asp-action="EditUser" method="post" class="space-y-6">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="bg-red-50 border-l-4 border-red-400 p-4 rounded-r-lg" role="alert">
                    <div class="flex">
                        <i class="ri-error-warning-line text-red-400 mr-2"></i>
                        <div class="text-red-700 text-sm"></div>
                    </div>
                </div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CurrentUserRole" />

                <!-- Personal Information -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="ri-user-line mr-1"></i>First Name
                        </label>
                        <input asp-for="FirstName"
                               class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Enter first name" />
                        <span asp-validation-for="FirstName" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <div>
                        <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="ri-user-line mr-1"></i>Last Name
                        </label>
                        <input asp-for="LastName"
                               class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Enter last name" />
                        <span asp-validation-for="LastName" class="text-red-500 text-sm mt-1"></span>
                    </div>
                </div>

                <!-- Account Information -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="ri-mail-line mr-1"></i>Email Address
                        </label>
                        <input asp-for="Email" type="email"
                               class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Enter email address" />
                        <span asp-validation-for="Email" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <div>
                        <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="ri-at-line mr-1"></i>Username
                        </label>
                        <input asp-for="Username"
                               class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Choose username" />
                        <span asp-validation-for="Username" class="text-red-500 text-sm mt-1"></span>
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="ri-phone-line mr-1"></i>Phone Number
                        </label>
                        <input asp-for="PhoneNumber"
                               class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Enter phone number" />
                        <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <div>
                        <label asp-for="Department" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="ri-building-line mr-1"></i>Department
                        </label>
                        <input asp-for="Department"
                               class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Enter department" />
                        <span asp-validation-for="Department" class="text-red-500 text-sm mt-1"></span>
                    </div>
                </div>

                <!-- Role and Status -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Role" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="ri-user-settings-line mr-1"></i>User Role
                        </label>
                        <select asp-for="Role"
                                class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            @if (Model.AvailableRoles != null && Model.AvailableRoles.Any())
                            {
                                @foreach (var role in Model.AvailableRoles)
                                {
                                    <option value="@role">@role.GetDisplayName()</option>
                                }
                            }
                            else
                            {
                                @foreach (RentManagement.Models.UserRole role in Enum.GetValues<RentManagement.Models.UserRole>())
                                {
                                    <option value="@role">@role.GetDisplayName()</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="Role" class="text-red-500 text-sm mt-1"></span>
                        <p class="text-sm text-gray-500 mt-1">Select the appropriate role for this user</p>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="ri-toggle-line mr-1"></i>Account Status
                        </label>
                        <div class="flex items-center space-x-4 p-3 border border-gray-300 rounded-lg">
                            <label class="flex items-center">
                                <input type="radio" asp-for="IsActive" value="true" class="form-radio h-4 w-4 text-blue-600" />
                                <span class="ml-2 text-sm text-gray-700">Active</span>
                            </label>
                            <label class="flex items-center">
                                <input type="radio" asp-for="IsActive" value="false" class="form-radio h-4 w-4 text-red-600" />
                                <span class="ml-2 text-sm text-gray-700">Inactive</span>
                            </label>
                        </div>
                        <span asp-validation-for="IsActive" class="text-red-500 text-sm mt-1"></span>
                    </div>
                </div>

                <!-- Information Note -->
                <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                    <div class="flex">
                        <i class="ri-information-line text-yellow-400 mr-2 mt-0.5"></i>
                        <div class="text-sm text-yellow-700">
                            <p class="font-medium">Password Management:</p>
                            <p class="mt-1">To change the user's password, use the "Reset Password" action from the user management list. This will generate a new password and send it to the user's email.</p>
                        </div>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="flex flex-col sm:flex-row justify-end space-y-3 sm:space-y-0 sm:space-x-3 pt-6 border-t border-gray-200">
                    <a asp-action="UserManagement"
                       class="inline-flex justify-center items-center px-6 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                        <i class="ri-close-line mr-2"></i>
                        Cancel
                    </a>
                    <button type="submit"
                            class="inline-flex justify-center items-center px-6 py-2 border border-transparent rounded-lg text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                        <i class="ri-save-line mr-2"></i>
                        Update User
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}