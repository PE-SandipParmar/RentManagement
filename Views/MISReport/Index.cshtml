                                <tr class="bg-gray-100 text-left">
                                    <th class="px-4 py-2">Month</th>
                                    <th class="px-4 py-2">Total Income</th>
                                    <th class="px-4 py-2">Total Expense</th>
                                    <th class="px-4 py-2">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="border-b hover:bg-gray-50">
                                    <td class="px-4 py-2">April</td>
                                    <td class="px-4 py-2">₹5,00,000</td>
                                    <td class="px-4 py-2">₹3,50,000</td>
                                    <td class="px-4 py-2">
                                        <button onclick="openModal('Financial - April')" class="px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600">View</button>
                                    </td>
                                </tr>
                            </tbody>
