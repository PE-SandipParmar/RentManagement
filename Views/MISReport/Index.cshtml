                    </div>
                </div>

                <div class="overflow-x-auto bg-white shadow rounded-lg p-4">
                    <table class="min-w-full border border-gray-200">
                        <thead class="table-header">
                            <tr>
                                <th class="px-4 py-2 border">Employee Name</th>
                                <th class="px-4 py-2 border">Employee ID</th>
                                <th class="px-4 py-2 border">Vendor Name</th>
                                <th class="px-4 py-2 border">Associated Lease</th>
                                <th class="px-4 py-2 border">Total Payment</th>
                                <th class="px-4 py-2 border">TDS</th>
                                <th class="px-4 py-2 border">Sec/Brokerage Amount</th>
                                <th class="px-4 py-2 border">IFSC</th>
                                <th class="px-4 py-2 border">Bank Name</th>
                                <th class="px-4 py-2 border">Account Number</th>
                                <th class="px-4 py-2 border">Payment Status</th>
                            </tr>
                        </thead>
                        <tbody id="paymentReportTable"></tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

    <script>
        function switchTab(tab) {
            document.querySelectorAll('.report-tab').forEach(el => el.classList.add('hidden'));
            document.getElementById(tab).classList.remove('hidden');
            document.querySelectorAll('button').forEach(btn => btn.classList.remove('tab-active'));
            event.target.classList.add('tab-active');
        }

        // Sample data
        const employeeData = [
            { name: 'John Doe', id: 101, designation: 'Manager', lease: 'Lease A', totalPayment: 50000 },
            { name: 'Jane Smith', id: 102, designation: 'HR', lease: 'Lease B', totalPayment: 30000 },
        ];
        const leaseData = [
            { lease: 'Lease A', start: '2023-04-01', end: '2024-03-31', emp: 'John Doe', vendor: 'Vendor A', sd: 100000, brokerage: 5000 },
            { lease: 'Lease B', start: '2023-05-01', end: '2024-04-30', emp: 'Jane Smith', vendor: 'Vendor B', sd: 50000, brokerage: 2500 },
        ];
        const paymentData = [
            { name: 'John Doe', id: 101, vendor: 'Vendor A', lease: 'Lease A', total: 50000, tds: 5000, secBroker: 45000, ifsc: 'SBIN0001234', bank: 'Axis Bank', acc: 1234567890, status: 'Completed' },
            { name: 'Jane Smith', id: 102, vendor: 'Vendor B', lease: 'Lease B', total: 30000, tds: 3000, secBroker: 27000, ifsc: 'HDFC0005678', bank: 'HDFC Bank', acc: 9876543210, status: 'Pending' },
        ];

        function populateTable(tableId, data) {
            const tbody = document.getElementById(tableId);
            tbody.innerHTML = '';
            data.forEach(d => {
                const tr = document.createElement('tr');
                tr.className = 'table-row';
                for (const key in d) {
                    const td = document.createElement('td');
                    td.className = 'px-4 py-2 border';
                    td.textContent = d[key];
                    tr.appendChild(td);
                }
                tbody.appendChild(tr);
            });
        }

        function viewEmployeeReport() { populateTable('empReportTable', employeeData); }
        function downloadEmployeeReport() { downloadTable('empReportTable', 'EmployeeReport', document.getElementById('empFileFormat').value); }
        function viewLeaseReport() { populateTable('leaseReportTable', leaseData); }
        function downloadLeaseReport() { downloadTable('leaseReportTable', 'LeaseReport', document.getElementById('leaseFileFormat').value); }
        function viewPaymentReport() { populateTable('paymentReportTable', paymentData); }
        function downloadPaymentReport() { downloadTable('paymentReportTable', 'EmployeePaymentReport', 'xlsx'); }

        function downloadTable(tableId, filename, type) {
            const table = document.getElementById(tableId);
            const ws = XLSX.utils.table_to_sheet(table);
            const wb = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(wb, ws, 'Sheet1');
            if (type === 'csv') { XLSX.writeFile(wb, filename + '.csv', { bookType: 'csv' }); }
            else { XLSX.writeFile(wb, filename + '.xlsx'); }
        }
    </script>
