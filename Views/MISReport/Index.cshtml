                            onclick="switchTab('financial')">
                        Financial
                    </button>
                    <button class="tab-btn px-4 py-2 text-gray-600 hover:text-blue-600"
                            onclick="switchTab('lease')">
                        Lease
                    </button>
                    <button class="tab-btn px-4 py-2 text-gray-600 hover:text-blue-600"
                            onclick="switchTab('employee')">
                        Employee
                    </button>
                    <button class="tab-btn px-4 py-2 text-gray-600 hover:text-blue-600"
                            onclick="switchTab('vendor')">
                        Vendor
                    </button>
                </div>

