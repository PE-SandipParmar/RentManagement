                        <select class="w-full mt-1 p-2 border rounded-lg">
                            <option>All Departments</option>
                            <option>HR</option>
                            <option>Finance</option>
                            <option>Admin</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium">Report Type</label>
                        <select class="w-full mt-1 p-2 border rounded-lg">
                            <option>All Report Types</option>
                            <option>Employee</option>
                            <option>Lease</option>
                            <option>Payment</option>
                            <option>Vendor</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium">From Date</label>
                        <input type="date" class="w-full mt-1 p-2 border rounded-lg" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium">To Date</label>
                        <input type="date" class="w-full mt-1 p-2 border rounded-lg" />
                    </div>
                </div>
                <div class="mt-4 flex justify-end">
