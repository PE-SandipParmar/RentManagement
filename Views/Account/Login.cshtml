@model RentManagement.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Rent Management System</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com/3.4.16"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#0EA5E9',
                    },
                    fontFamily: {
                        sans: ['Inter', 'system-ui', 'sans-serif'],
                    }
                }
            }
        }
    </script>
    <style>
       

        .form-checkbox {
            appearance: none;
            background-color: #fff;
            margin: 0;
            color: #0EA5E9;
            width: 1rem;
            height: 1rem;
            border: 1px solid #d1d5db;
            border-radius: 0.25rem;
            display: grid;
            place-content: center;
        }

        .form-checkbox:checked {
            background-color: #0EA5E9;
            border-color: #0EA5E9;
        }

        .form-checkbox:checked::before {
            content: "✓";
            color: white;
            font-size: 0.75rem;
            line-height: 1;
        }
    </style>
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body class="min-h-screen flex">
    <!-- Left: Illustration & Title -->
    <div class="hidden md:flex w-1/2 bg-gradient-to-br from-primary to-blue-400 flex-col items-center justify-center text-white p-12">
        <h1 class="text-3xl font-bold mb-8 text-center">Rent Management System</h1>
        <img src="~/assets/img/Loginpage.svg" alt="Login Illustration" class="w-[600px] md:w-[720px] max-w-full h-auto" />
    </div>

    <!-- Right: Login Form -->
    <div class="flex flex-1 flex-col justify-center items-center bg-white p-8 min-h-screen">
        <div class="w-full max-w-md">
            <!-- Logo Section -->
            <div class="flex flex-col items-center mb-8">
                <img src="~/assets/img/FSSAI_Logo.png" alt="FSSAI Logo" class="h-16 mb-2" />
                <h2 class="text-2xl font-bold text-gray-800 mb-1">Welcome</h2>
                <p class="text-gray-500 text-sm">Login to your account</p>
            </div>

            <form asp-action="Login" method="post" class="space-y-6" id="loginForm">
                <input type="hidden" asp-for="ReturnUrl" />
                
                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="hidden bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert" id="validationSummary"></div>

                <!-- Username Field -->
                <div>
                    <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-1">Email or Username</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-primary">
                            <i class="ri-user-line"></i>
                        </span>
                        <input asp-for="Username" type="text"
                               class="pl-10 pr-4 py-2 w-full border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-primary"
                               placeholder="Enter your email or username" autofocus />
                    </div>
                    <span asp-validation-for="Username" class="text-red-500 text-sm"></span>
                </div>

                <!-- Password Field -->
                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-primary">
                            <i class="ri-lock-2-line"></i>
                        </span>
                        <input asp-for="Password" type="password" id="passwordField"
                               class="pl-10 pr-10 py-2 w-full border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-primary"
                               placeholder="Enter your password" />
                        <span class="absolute inset-y-0 right-0 flex items-center pr-3 text-primary cursor-pointer" id="togglePassword">
                            <i class="ri-eye-line" id="eyeIcon"></i>
                        </span>
                    </div>
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                </div>

                <!-- Remember Me & Forgot Password -->
                <div class="flex items-center justify-between">
                    <label class="flex items-center">
                        <input asp-for="RememberMe" type="checkbox" class="form-checkbox h-4 w-4 text-primary" />
                        <span class="ml-2 text-sm text-gray-600">Remember me</span>
                    </label>
                    <a asp-action="ForgotPassword" class="text-sm text-primary hover:underline">Forgot Password?</a>
                </div>

                <!-- Submit Button -->
                <button type="submit" id="loginButton"
                        class="w-full bg-primary text-white py-2 rounded font-semibold text-lg hover:bg-primary/90 transition duration-200 flex items-center justify-center">
                    <span id="buttonText">Login</span>
                    <div id="buttonSpinner" class="spinner ml-2 hidden"></div>
                </button>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            // Password visibility toggle
            $('#togglePassword').click(function() {
                const passwordField = $('#passwordField');
                const eyeIcon = $('#eyeIcon');
                
                if (passwordField.attr('type') === 'password') {
                    passwordField.attr('type', 'text');
                    eyeIcon.removeClass('ri-eye-line').addClass('ri-eye-off-line');
                } else {
                    passwordField.attr('type', 'password');
                    eyeIcon.removeClass('ri-eye-off-line').addClass('ri-eye-line');
                }
            });

            // Form submission with loader
            $('#loginForm').submit(function() {
                const button = $('#loginButton');
                const buttonText = $('#buttonText');
                const buttonSpinner = $('#buttonSpinner');
                
                // Disable button and show loader
                button.prop('disabled', true);
                button.addClass('opacity-75 cursor-not-allowed');
                buttonText.text('Logging in...');
                buttonSpinner.removeClass('hidden');
                
                // Don't prevent default form submission - let MVC handle it
                return true;
            });

            // Show validation summary if it has content
            const validationSummary = $('#validationSummary');
            if (validationSummary.children().length > 0) {
                validationSummary.removeClass('hidden');
            }

            // Re-enable button if there are validation errors (page didn't redirect)
            if ($('.text-red-500:visible').length > 0 || validationSummary.is(':visible')) {
                setTimeout(function() {
                    const button = $('#loginButton');
                    const buttonText = $('#buttonText');
                    const buttonSpinner = $('#buttonSpinner');
                    
                    button.prop('disabled', false);
                    button.removeClass('opacity-75 cursor-not-allowed');
                    buttonText.text('Login');
                    buttonSpinner.addClass('hidden');
                }, 100);
            }
        });
    </script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}