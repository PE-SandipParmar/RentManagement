@{
}
@{
    ViewData["Title"] = "Access Denied";
}

<div class="flex justify-center">
    <div class="w-full max-w-md">
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <div class="bg-red-500 text-white px-6 py-4">
                <h2 class="text-2xl font-bold flex items-center">
                    <i class="fas fa-ban mr-3"></i>Access Denied
                </h2>
            </div>
            <div class="p-6 text-center">
                <div class="mb-6">
                    <i class="fas fa-exclamation-triangle text-red-500 text-6xl"></i>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-4">Insufficient Privileges</h3>
                <p class="text-gray-600 mb-6">
                    You don't have permission to access this resource.
                    Please contact your administrator if you believe this is an error.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a asp-action="Dashboard" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                        <i class="fas fa-home mr-2"></i>Go to Dashboard
                    </a>
                    <button onclick="history.back()" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                        <i class="fas fa-arrow-left mr-2"></i>Go Back
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>