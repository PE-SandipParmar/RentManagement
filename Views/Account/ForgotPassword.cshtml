@model RentManagement.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="flex justify-center">
    <div class="w-full max-w-md">
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <div class="bg-cyan-500 text-white px-6 py-4">
                <h2 class="text-2xl font-bold flex items-center">
                    <i class="fas fa-question-circle mr-3"></i>Forgot Password
                </h2>
            </div>
            <div class="p-6">
                <p class="text-gray-600 mb-6">Enter your email address and we'll send you a link to reset your password.</p>

                <form asp-action="ForgotPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert"></div>

                    <div class="mb-6">
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-envelope mr-1"></i>Email Address
                        </label>
                        <input asp-for="Email" type="email" class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent text-lg" placeholder="Enter your email address" autofocus />
                        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="mb-6">
                        <button type="submit" class="w-full bg-cyan-500 hover:bg-cyan-700 text-white font-bold py-3 px-4 rounded text-lg">
                            <i class="fas fa-paper-plane mr-2"></i>Send Reset Link
                        </button>
                    </div>
                </form>

                <hr class="my-4">
                <div class="text-center">
                    <p class="text-gray-600">Remember your password? <a asp-action="Login" class="text-cyan-500 hover:text-cyan-700 font-medium">Sign in here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}