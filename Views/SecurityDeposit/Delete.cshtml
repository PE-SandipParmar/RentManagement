@model RentManagement.Models.SecurityDeposit

@{
    ViewData["Title"] = "Delete Security Deposit";
}

<div class="max-w-4xl mx-auto">
    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h1 class="text-2xl font-bold text-red-600">Delete Security Deposit</h1>
        </div>
        <div class="mb-6 bg-red-50 border-l-4 border-red-500 text-red-700 p-4 rounded">
            <p class="font-semibold"></p>
            <p>Are you sure you want to permanently delete this Security Deposit? This action cannot be undone.</p>
        </div>

        <div class="px-6 py-6 text-gray-700">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-4">
                
                <div>
                    <dt class="font-semibold">Employee Name</dt>
                    <dd>@Model.EmployeeName</dd>
                </div>
                <div>
                    <dt class="font-semibold">Vendor Name</dt>
                    <dd>@Model.VendorName</dd>
                </div>
                <div>
                    <dt class="font-semibold">Lease Name</dt>
                    <dd>@Model.LeaseName</dd>
                </div>
                <div>
                    <dt class="font-semibold">Amount</dt>
                    <dd>@Model.Amount</dd>
                </div>
                <div>
                    <dt class="font-semibold">Approval Status</dt>
                    <dd>@Model.ApprovalStatus</dd>
                </div>
                <div>
                    <dt class="font-semibold">Created By</dt>
                    <dd>@Model.CreatedBy</dd>
                </div>
                <div>
                    <dt class="font-semibold">Created Date</dt>
                    <dd>@Model.CreatedDate.ToString("dd/MM/yyyy")</dd>
                </div>
                <div>
                    <dt class="font-semibold">Modified By</dt>
                    <dd>@Model.ModifiedBy</dd>
                </div>
                <div>
                    <dt class="font-semibold">Modified Date</dt>
                    <dd>@Model.ModifiedDate?.ToString("dd/MM/yyyy")</dd>
                </div>
                <div>
                    <dt class="font-semibold">Is Active</dt>
                    <dd>@(Model.IsActive ? "Yes" : "No")</dd>
                </div>
            </dl>

            <form asp-action="DeleteConfirmed" method="post" class="mt-6 flex items-center">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-lg shadow">
                    Yes, Delete
                </button>
                <a asp-action="Index" class="ml-4 bg-gray-300 hover:bg-gray-400 text-gray-800 px-6 py-2 rounded-lg shadow">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>
