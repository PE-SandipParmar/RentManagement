@model RentManagement.Models.MonthlyRentPayment

@{
    ViewData["Title"] = "Delete Monthly Rent Payment";
}


<div class="max-w-4xl mx-auto">
    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h1 class="text-2xl font-bold text-red-600">Delete Monthly Rent Payment</h1>
        </div>
        <div class="mb-6 bg-red-50 border-l-4 border-red-500 text-red-700 p-4 rounded">
            <p class="font-semibold"></p>
            <p>Are you sure you want to permanently delete this Monthly Rent Payment? This action cannot be undone.</p>
        </div>

        <div class="px-6 py-6 text-gray-700">


            <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-4">
                <div>
                    <dt class="font-semibold">
                        Employee Name
                    </dt>
                    <dd>@Model.EmployeeName</dd>
                </div>
                <div>
                    <dt class="font-semibold">
                        Vendor Name
                    </dt>
                    <dd>@Model.VendorName</dd>
                </div>
                <div>
                    <dt class="font-semibold">
                        Lease Ref.
                    </dt>
                    <dd>@Model.LeaseName</dd>
                </div>
                <div>
                    <dt class="font-semibold">Payment Month</dt>
                    <dd>@Model.PaymentMonth?.ToString("MMMM yyyy")</dd>
                </div>
                <div>
                    <dt class="font-semibold">
                        Monthly Lease Amount
                    </dt>
                    <dd>@Model.MonthlyLeaseAmount</dd>
                </div>

                <div>
                    <dt class="font-semibold">TDS Rate</dt>
                    <dd>@Model.TDSRate</dd>
                </div>
                <div>
                    <dt class="font-semibold">
                        Net Payable Amount
                    </dt>
                    <dd>@Model.NetPayableAmount</dd>
                </div>

                <div>
                    <dt class="font-semibold">Payment Status</dt>
                    <dd>@Model.PaymentStatus</dd>
                </div>
                <div>
                    <dt class="font-semibold">DSC Approval Status</dt>
                    <dd>@Model.DSCApprovalStatus</dd>
                </div>

                <div>
                    <dt class="font-semibold">Remark</dt>
                    <dd>@Model.Remark</dd>
                </div>
                <div>
                    <dt class="font-semibold">
                        Created Date
                    </dt>
                    <dd>@Model.CreatedDate.ToString("dd/MM/yyyy")</dd>
                </div>
            </dl>

            <form asp-action="DeleteConfirmed" method="post" class="mt-6 flex items-center">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-lg shadow">
                    Yes, Delete
                </button>
                <a asp-action="Index" class="ml-4 bg-gray-300 hover:bg-gray-400 text-gray-800 px-6 py-2 rounded-lg shadow">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>
