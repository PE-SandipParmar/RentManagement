@model RentManagement.Models.Lease

@{
    ViewData["Title"] = "Delete Lease";
}


<div class="max-w-4xl mx-auto">
    <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
        <h1 class="text-2xl font-bold text-red-600">Delete Lease</h1>
    </div>
    <div class="mb-6 bg-red-50 border-l-4 border-red-500 text-red-700 p-4 rounded">
        <p class="font-semibold"></p>
        <p>Are you sure you want to permanently delete this employee? This action cannot be undone.</p>
    </div>

    <div class="px-6 py-6 text-gray-700">
      

        <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-4">
            <div>
                <dt class="font-semibold">Perquisite Type</dt>
                <dd>@Model.PerquisiteType</dd>
            </div>
            <div>
                <dt class="font-semibold">Status</dt>
                <dd>@Model.Status</dd>
            </div>

            <div>
                <dt class="font-semibold">Lease Type</dt>
                <dd>@Model.LeaseTypeName</dd>
            </div>
            <div>
                <dt class="font-semibold">Reference No</dt>
                <dd>@Model.RefNo</dd>
            </div>

            <div>
                <dt class="font-semibold">Lease Name (Employee)</dt>
                <dd>@Model.EmployeeName</dd>
            </div>
            <div>
                <dt class="font-semibold">Reference Date</dt>
                <dd>@Model.RefDate?.ToString("dd/MM/yyyy")</dd>
            </div>

            <div>
                <dt class="font-semibold">% of Perquisite Applicable</dt>
                <dd>@Model.PerquisiteApplicablePercentId</dd>
            </div>
            <div>
                <dt class="font-semibold">Owner Name</dt>
                <dd>@Model.VendorName</dd>
            </div>

            <div>
                <dt class="font-semibold">Monthly Rent Payable</dt>
                <dd>@Model.MonthlyRentPayable?.ToString("C")</dd>
            </div>
            <div>
                <dt class="font-semibold">Lease From Date</dt>
                <dd>@Model.FromDate?.ToString("dd/MM/yyyy")</dd>
            </div>

            <div>
                <dt class="font-semibold">Lease End Date</dt>
                <dd>@Model.EndDate?.ToString("dd/MM/yyyy")</dd>
            </div>
            <div>
                <dt class="font-semibold">Rent Recovery Element</dt>
                <dd>@Model.RentRecoveryElementName</dd>
            </div>

            <div>
                <dt class="font-semibold">Rent Deposit</dt>
                <dd>@Model.RentDeposit?.ToString("C")</dd>
            </div>
            <div>
                <dt class="font-semibold">Additional Rent Recovery</dt>
                <dd>@Model.AdditionalRentRecovery?.ToString("C")</dd>
            </div>

            <div>
                <dt class="font-semibold">Brokerage Amount</dt>
                <dd>@Model.BrokerageAmount?.ToString("C")</dd>
            </div>
            <div>
                <dt class="font-semibold">License Fee Recovery Element</dt>
                <dd>@Model.LicenseFeeRecoveryElementName</dd>
            </div>

            <div>
                <dt class="font-semibold">Stamp Duty</dt>
                <dd>@Model.StampDuty?.ToString("C")</dd>
            </div>
            <div>
                <dt class="font-semibold">License Fee Amount</dt>
                <dd>@Model.LicenseFeeAmount?.ToString("C")</dd>
            </div>

            <div>
                <dt class="font-semibold">Payment Term</dt>
                <dd>@Model.PaymentTermName</dd>
            </div>
            <div>
                <dt class="font-semibold">Payable On or Before</dt>
                <dd>@Model.PayableOnOrBeforeName</dd>
            </div>

            <div class="md:col-span-2">
                <dt class="font-semibold">Narration</dt>
                <dd>@Model.Narration</dd>
            </div>

            <div>
                <dt class="font-semibold">Is Active</dt>
                <dd>@(Model.IsActive ? "Yes" : "No")</dd>
            </div>
            <div>
                <dt class="font-semibold">Total Lease Amount</dt>
                <dd>@(Convert.ToDecimal(Model.TotalLeaseAmount).ToString("C"))</dd>
            </div>

            
        </dl>

        <form asp-action="DeleteConfirmed" method="post" class="mt-6 flex items-center">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-lg shadow">
                Yes, Delete
            </button>
            <a asp-action="Index" class="ml-4 bg-gray-300 hover:bg-gray-400 text-gray-800 px-6 py-2 rounded-lg shadow">
                Cancel
            </a>
        </form>
    </div>
    </div>
</div>
